{
    "name": "mbaptista10/superlog-php",
    "description": "Lib constru√≠da em cima do Monolog para log em linha no formato JSON",
    "keywords": ["php", "monolog", "superlog"],
    "license": "MIT",
    "authors": [
        {
            "name": "Matheus Baptista",
            "email": "matheusdp.baptista10@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "monolog/monolog": "^3.7",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "laravel/pint": "^1.18.1",
        "pestphp/pest": "^3.5.1",
        "pestphp/pest-plugin-type-coverage": "^3.1",
        "phpstan/phpstan": "^1.12.7",
        "rector/rector": "^1.2.8",
        "symfony/var-dumper": "^7.1.6"
    },
    "autoload": {
        "psr-4": {
            "Superlog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "rector": "rector",
        "rector:check": "rector --dry-run",
        "phpstan:check": "phpstan analyse --ansi",
        "pint": "pint",
        "pint:check": "pint --test",
        "test": "pest --colors=always",
        "test:ci": "pest --colors=always --coverage --parallel --min=100",
        "checks": [
            "@rector:check",
            "@pint:check",
            "@phpstan:check",
            "@test:ci"
        ]
    }
}
